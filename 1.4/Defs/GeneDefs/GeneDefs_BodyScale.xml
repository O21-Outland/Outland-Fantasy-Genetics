	<GeneDef ParentName="Outland_BodyScaleBase">
		<defName>Outland_BodyScale_Tiny</defName>
		<label>body scale (tiny)</label>
		<description>Carriers of this gene have a much smaller body scale than usual, bringing some overall stat changes.</description>
		<iconPath>Outland/GeneIcons/Gene_ScaleTiny</iconPath>
		<displayOrderInCategory>7901</displayOrderInCategory>
		<statFactors>
			<MoveSpeed>1.2</MoveSpeed>
			<Mass>0.8</Mass>
			<MeatAmount>0.8</MeatAmount>
			<LeatherAmount>0.8</LeatherAmount>
			<WorkSpeedGlobal>1.1</WorkSpeedGlobal>
			<MeleeHitChance>0.8</MeleeHitChance>
			<MeleeDodgeChance>1.1</MeleeDodgeChance>
			<CarryingCapacity>0.8</CarryingCapacity>
		</statFactors>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<bodyScaleFactor>(0.7,0.7)</bodyScaleFactor>
				<headScaleFactor>(0.7,0.7)</headScaleFactor>
				<backgroundPathEndogenes>Outland/GeneIcons/EndogeneBG</backgroundPathEndogenes>
				<backgroundPathXenogenes>Outland/GeneIcons/XenogeneBG</backgroundPathXenogenes>
			</li>
		</modExtensions>
	</GeneDef>

