	<GeneDef Name="Outland_BodyScaleBase" Abstract="True">
		<exclusionTags>
			<li>BodySize</li>
		</exclusionTags>
		<displayCategory>Outland_BodyScale</displayCategory>
		<displayOrderInCategory>7900</displayOrderInCategory>
