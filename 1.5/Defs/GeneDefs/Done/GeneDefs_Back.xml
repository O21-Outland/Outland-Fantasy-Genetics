		<exclusionTags>
			<li>Back</li>
		</exclusionTags>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<offsets>
					<north>
						<bodyTypes>
							<Male>(0, 0, 0)</Male>
							<Female>(0, 0, -0.02)</Female>
							<Thin>(0, 0, -0.02)</Thin>
							<Hulk>(0, 0, -0.01)</Hulk>
							<Fat>(0, 0, -0.01)</Fat>
						</bodyTypes>
					</north>
					<east>
						<bodyTypes>
							<Male>(-0.03, 0, 0)</Male>
							<Female>(-0.08, 0, 0.01)</Female>
							<Thin>(-0.15, 0, 0.05)</Thin>
