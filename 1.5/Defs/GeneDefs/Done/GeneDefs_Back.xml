	<GeneDef ParentName="Outland_GeneBackBase">
		<defName>Outland_Back_FeathersWhite</defName>
		<label>back feathers (white)</label>
		<description>Carriers of this gene will grow a prominent patch of feathers on their back.</description>
		<iconPath>Outland/Genes/Back/BackFeathers</iconPath>
		<displayOrderInCategory>7801</displayOrderInCategory>
		<renderNodeProperties>
			<li>
				<workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
				<texPath>Outland/Genes/Back/BackFeathers</texPath>
				<colorType>Custom</colorType>
				<useSkinShader>false</useSkinShader>
				<overrideMeshSize>(2, 2)</overrideMeshSize>
				<parentTagDef>Body</parentTagDef>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<drawData>
					<scaleOffsetByBodySize>true</scaleOffsetByBodySize>
					<defaultData>
						<layer>-2</layer>
					</defaultData>
					<dataNorth>
						<layer>15</layer>
					</dataNorth>
					<dataEast>
						<layer>15</layer>
					</dataEast>
					<dataWest>
						<layer>15</layer>
					</dataWest>
				</drawData>
			</li>
		</renderNodeProperties>
	</GeneDef>

